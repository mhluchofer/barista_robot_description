        <origin xyz="0 -0.15 -0.0673" rpy="0 0 0" />
        <parent link="base_link" />
        <child link="right_wheel" />
        <axis xyz="0 1 0" />
        <limit effort="10000" velocity="1000"/>
       <dynamics damping="0.2" friction="1.0"/>
    </joint>

    <!-- Front Caster Wheel -->

    <link name="front_yaw_link">
