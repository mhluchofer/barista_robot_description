    <gazebo reference="front_yaw_link">
        <material>Gazebo/Blue</material>
    </gazebo>

    <joint name="front_yaw_joint" type="continuous">
        <origin xyz="0.15 0 -0.0775" rpy="0 0 0" />
        <parent link="base_link" />
        <child link="front_yaw_link" />
        <axis xyz="0 0 1" />
        <limit effort="1000.0" velocity="100.0" />
        <dynamics damping="0.00" friction="0.1"/>
    </joint>

    <link name="front_roll_link">
      <visual>
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <geometry>
          <cylinder length="0.001" radius="0.0045000000000000005"/>
        </geometry>
        <material name="red"/>
      </visual>

      <collision>
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <geometry>
          <cylinder length="0.001" radius="0.0045000000000000005"/>
        </geometry>
      </collision>

      <inertial>
          <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
          <mass value="0.001"/>
          <inertia ixx="5.145833333333334e-09" ixy="0" ixz="0" iyy="5.145833333333334e-09" iyz="0" izz="1.0125000000000003e-08"/>
      </inertial>
  </link>
    <gazebo reference="front_roll_link">
        <material>Gazebo/Red</material>
    </gazebo>

    <joint name="front_roll_joint" type="continuous">
        <origin xyz="0 0 0" rpy="0 0 0" />
        <parent link="front_yaw_link" />
        <child link="front_roll_link" />
        <axis xyz="1 0 0" />
        <limit effort="1000.0" velocity="100.0" />
        <dynamics damping="0.00" friction="0.1"/>
    </joint>

    <link name="front_pitch_link">
        <visual>
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <geometry>
            <sphere radius="0.025"/>
        </geometry>
        <material name="green_dark"/>
        </visual>

        <collision>
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <geometry>
            <sphere radius="0.025"/>
        </geometry>
        </collision>

        <inertial>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <mass value="0.25"/>
            <inertia ixx="6.250000000000001e-05" ixy="0" ixz="0" iyy="6.250000000000001e-05" iyz="0" izz="6.250000000000001e-05"/>
        </inertial>
    </link>

    <gazebo reference="front_pitch_link">
        <kp>1000000000000000000000000000.0</kp>
        <kd>1000000000000000000000000000.0</kd>
        <mu1>0.2</mu1>
        <mu2>0.2</mu2>
        <material>Gazebo/Green</material>
    </gazebo>

    <joint name="front_pitch_joint" type="continuous">
        <origin xyz="0 0 0" rpy="0 0 0" />
        <parent link="front_roll_link" />
        <child link="front_pitch_link" />
        <axis xyz="0 1 0" />
        <limit effort="1000.0" velocity="100.0" />
       <dynamics damping="0.00" friction="0.1"/>
    </joint>

    <!-- Back Caster Wheel -->

    <link name="back_yaw_link">
        <visual>
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <geometry>          
          <cylinder length="0.001" radius="0.0045000000000000005"/>
        </geometry>
        <material name="blue"/>
      </visual>

      <collision>
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <geometry>
          <cylinder length="0.001" radius="0.0045000000000000005"/>
        </geometry>
      </collision>

      <inertial>
          <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
          <mass value="0.001"/>
          <inertia ixx="5.145833333333334e-09" ixy="0" ixz="0" iyy="5.145833333333334e-09" iyz="0" izz="1.0125000000000003e-08"/>
